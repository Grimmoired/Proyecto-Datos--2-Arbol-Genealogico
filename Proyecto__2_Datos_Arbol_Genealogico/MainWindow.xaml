<Window x:Class="Proyecto__2_Datos_Arbol_Genealogico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Proyecto__2_Datos_Arbol_Genealogico.Views"
        Title="Árbol Genealógico"
        Height="720" Width="1100"
        Background="#FF0A0A0A"
        WindowStartupLocation="CenterScreen">



    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <!-- Panel de edición / creación -->
        <Border Grid.Column="0" Padding="12">
            <StackPanel>
                <TextBlock Text="Miembro" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>

                <StackPanel Orientation="Horizontal">
                    <Image x:Name="PreviewPhoto" Width="96" Height="96" Stretch="UniformToFill"/>
                    <StackPanel Margin="8,30,0,0">
                        <Button x:Name="BtnLoadPhoto" Content="Cargar foto" Click="BtnLoadPhoto_Click"/>
                        <TextBlock Text="Se recomienda foto frontal 300x300" FontSize="11"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Nombre"/>
                    <TextBox x:Name="TxtFirstName"/>

                    <TextBlock Text="Apellido" Margin="0,6,0,0"/>
                    <TextBox x:Name="TxtLastName"/>

                    <TextBlock Text="Cédula" Margin="0,6,0,0"/>
                    <TextBox x:Name="TxtCedula"/>



                    <Grid Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Latitud"/>
                            <TextBox x:Name="TxtLat"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Longitud"/>
                            <TextBox x:Name="TxtLon"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Fecha de nacimiento" Margin="0,6,0,0"/>
                    <DatePicker x:Name="DpDob"/>

                    <TextBlock Text="Fecha de muerte (opcional)" Margin="0,6,0,0"/>
                    <DatePicker x:Name="DpDod"/>


                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button x:Name="BtnAddOrUpdate" Content="Agregar miembro" Click="BtnAddOrUpdate_Click"/>
                        <Button x:Name="BtnCancelEdit" Content="Cancelar" Click="BtnCancelEdit_Click"
                                Visibility="Collapsed" Margin="8,0,0,0"/>
                        <Button x:Name="BtnOpenMap" Content="Mapa" Click="BtnOpenMap_Click" Margin="8,0,0,0"/>
                    </StackPanel>

                    <TextBlock Text="Creado por Bryan Abarca y Jorge Pablo Porras" Margin="0,220,0,0"/>
                </StackPanel>


            </StackPanel>
        </Border>

        <!-- Vista del arbol -->
        <Grid Grid.Column="1" Margin="12,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="260"/>
            </Grid.RowDefinitions>

            <Border Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="280"/>
                    </Grid.ColumnDefinitions>

                    <views:FamilyTreeView x:Name="FamilyTreeCtrl" Grid.Column="0"/>

                    <StackPanel x:Name="InfoPanel" Grid.Column="1" Margin="12,0,0,0">
                        <TextBlock Text="Miembro seleccionado" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Image x:Name="InfoPhoto" Width="120" Height="120" Margin="0,0,0,8" Stretch="UniformToFill"/>
                        <TextBlock x:Name="InfoName" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock x:Name="InfoAge" Margin="0,6,0,0"/>
                        <TextBlock x:Name="InfoCed" FontSize="12" Margin="0,6,0,0"/>

                        <Button Content="Asignar hijo" Click="BtnAssignChild_Click" Margin="0,10,0,0"/>
                        <Button Content="Asignar pareja" Click="BtnAssignPartner_Click" Margin="0,6,0,0"/>
                        <Button Content="Recalcular Layout" Click="BtnReLayout_Click" Margin="0,12,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Margin="0,12,0,0" Padding="8">
                <StackPanel>
                    <TextBlock Text="Estadísticas" FontWeight="Bold" FontSize="14"/>

                    <TextBlock Text="Máxima distancia" Margin="0,8,0,0"/>
                    <TextBlock x:Name="TxtMaxPair"/>

                    <TextBlock Text="Mínima distancia" Margin="0,8,0,0"/>
                    <TextBlock x:Name="TxtMinPair"/>

                    <TextBlock Text="Promedio" Margin="0,8,0,0"/>
                    <TextBlock x:Name="TxtAvg"/>

                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Button Content="Recalcular" Click="BtnRebuildGraph_Click"/>
                        <Button Content="Guardar JSON" Click="BtnSaveJson_Click" Margin="8,0,0,0"/>
                        <Button Content="Cargar JSON" Click="BtnLoadJson_Click" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
