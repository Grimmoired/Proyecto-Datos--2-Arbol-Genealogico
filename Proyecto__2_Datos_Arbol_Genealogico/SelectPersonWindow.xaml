<Window x:Class="Proyecto__2_Datos_Arbol_Genealogico.SelectPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccione miembro"
        Height="420"
        Width="380"
        Background="#FF0A0A0A"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="ListBoxPersons" DisplayMemberPath="Content"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Seleccionar" Width="100" Click="BtnSelect_Click"/>
            <Button Content="Cancelar" Width="80" Margin="8,0,0,0" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
