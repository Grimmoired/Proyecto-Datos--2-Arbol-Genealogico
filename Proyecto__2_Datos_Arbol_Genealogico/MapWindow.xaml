<Window x:Class="Proyecto__2_Datos_Arbol_Genealogico.MapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mapa mundial"
        Height="780"
        Width="1200"
		Background="#FF0A0A0A"
        WindowStartupLocation="CenterScreen">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="360"/>
		</Grid.ColumnDefinitions>

		<ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="#111">
			<Canvas x:Name="MapCanvas">
				<Image x:Name="MapImage" Stretch="None"/>
			</Canvas>
		</ScrollViewer>

		<Border Grid.Column="1" Padding="12" Margin="8">
			<StackPanel>
				<TextBlock Text="Detalles" FontSize="16" FontWeight="Bold"/>
				<TextBlock x:Name="TxtSelected" Text="Seleccione un miembro" TextWrapping="Wrap"/>

				<ListBox x:Name="ListDistances" Height="420" Margin="0,8,0,0"/>

				<Button Content="Limpiar líneas" Click="BtnClear_Click"/>
			</StackPanel>
		</Border>
	</Grid>
</Window>
