<Window x:Class="Proyecto__2_Datos_Arbol_Genealogico.MapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mapa mundial - Visualizador"
        Height="780"
        Width="1200"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="360"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="MapCanvas" Background="Black">
                <Image x:Name="MapImage"/>
            </Canvas>
        </ScrollViewer>

        <StackPanel Grid.Column="1" Margin="8">
            <TextBlock Text="Detalles"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>
            <TextBlock x:Name="TxtSelected"
                       Text="Seleccione un miembro en el mapa."
                       TextWrapping="Wrap"/>
            <ListBox x:Name="ListDistances"
                     Height="420"
                     Margin="0,8,0,0"/>
            <Button Content="Limpiar líneas"
                    Click="BtnClear_Click" />
        </StackPanel>
    </Grid>
</Window>
